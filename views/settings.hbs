<header class="text-center" role="banner">
  <h1>Settings</h1>
  <a href="/profile">Back to Profile</a>
  <hr />
</header>

<section class="col-sm-8 col-sm-offset-2" role="region">
  <section class="col-sm-8 col-sm-offset-2">
    <h2>Profile Settings</h2>
    <hr />

    <form action="/settings/{{user._id}}" method="post">
      <input type="hidden" name="_method" value="put">

      <div class="form-group">
        <label for="email-edit">Email</label>
        <input type="text" id="email-edit" name="email" value="{{user.email}}" autofocus="true" />
      </div>

      <div class="form-group">
        <label for="name-edit">Name</label>
        <input type="text" id="name-edit" name="name" value="{{user.name}}" />
      </div>

      <div class="form-group">
        <label for="phone-number-edit">Phone Number</label>
        <input type="text" id="phone-number-edit" name="phoneNumber" value="{{user.phoneNumber}}" />
      </div>

      <div class="form-group">
        <button type="submit" class="btn-primary width-100" value="Submit">Save</button>
      </div>
    </form>
  </section>

  <section class="col-sm-8 col-sm-offset-2">
    <h2>Accessibility Settings</h2>
    <hr />
    <div class="form-group">
      <label for="theme-btn">Theme</label>
      <form id="theme-btn" action="/toggleTheme/{{user._id}}" method="post" class="flex-wrapper flex-items-center">
        <input type="hidden" name="_method" value="put">
        <button type="submit" class="{{#if user.darkTheme}}btn-default{{else}}btn-primary{{/if}} width-100">
          Switch to {{#if user.darkTheme}}Light {{else}}Dark {{/if}}Theme
        </button>
      </form>
    </div>
    <div class="form-group">
      <label for="invert-btn">Inverted Colours</label>
      <form id="invert-btn" action="/toggleInverted/{{user._id}}" method="post" class="flex-wrapper flex-items-center">
        <input type="hidden" name="_method" value="put">
        <button type="submit" class="{{#if user.darkTheme}}btn-default{{else}}btn-primary{{/if}} width-100">
          {{#if user.inverted}}Revert{{else}}Invert{{/if}} Colours
        </button>
      </form>
    </div>
  </section>

  <section class="col-sm-8 col-sm-offset-2">
    <h2>Phone Settings</h2>
    <hr />
    <div class="form-group">
      <label for="test-call">Test Call</label>
      <form id="test-call" class="flex-wrapper flex-items-center">
        <a class="button btn-success width-100" href="tel:{{user.phoneNumber}}">Send a Test Call</a>
      </form>
    </div>
  </section>

</section>

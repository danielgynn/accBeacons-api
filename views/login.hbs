<header role="banner">
  <h1 class="text-center"><span class="fa fa-sign-in"></span> Login</h1>
  <hr />
</header>

<section class="col-sm-8 col-sm-offset-2" role="region">
  {{#if message}}
  	<div class="alert-banner alert-danger visible">{{message}} {{> close-button}}</div>
  {{/if}}

  <form class="col-sm-8 col-sm-offset-2" action="/login" method="post">
    <div class="form-group">
      <label for="email">Email</label>
      <input type="email" id="email" placeholder="Enter your email..." name="email" autofocus="true" />
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input type="password" id="password" placeholder="Enter your password..." name="password" />
    </div>
    <div class="form-group">
      <button type="submit" class="btn-primary width-100" value="Login">Login</button>
    </div>
  </form>
</section>

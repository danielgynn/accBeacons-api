<section class="col-sm-8 col-sm-offset-2">
  <h1 class="text-center"><span class="fa fa-sign-in"></span> Login</h1>
  <hr>

  {{#if message}}
  	<div class="alert-danger">{{message}}</div>
  {{/if}}

  <form class="col-sm-8 col-sm-offset-2" action="/login" method="post">
    <div class="form-group">
        <label>Email</label>
        <input type="text" class="" placeholder="Enter your email..." name="email" autofocus="true" />
    </div>
    <div class="form-group">
      <label>Password</label>
      <input type="password" class="" placeholder="Enter your password..." name="password" />
    </div>
    <div>
      <button type="submit" class="btn-primary width-100" value="Login">Login</button>
    </div>
  </form>
</section>

<section class="col-sm-8 col-sm-offset-2">
  <h1 class="text-center"><span class="fa fa-user-plus"></span> Signup</h1>
  <hr>

  {{#if message}}
    <div class="alert-danger">{{message}}</div>
  {{/if}}

  <form class="col-sm-8 col-sm-offset-2" action="/signup" method="post">
    <div class="form-group">
      <label>Email</label>
      <input type="text" placeholder="Please enter your email address" name="email" autofocus="true" />
    </div>

    <div class="form-group">
      <label>Password</label>
      <input type="password" placeholder="Please enter a strong password" name="password" />
    </div>

    <div>
      <button type="submit" class="btn-primary width-100" value="Create Account">Create Account</button>
    </div>
  </form>
</section>

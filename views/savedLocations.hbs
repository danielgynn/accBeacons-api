<header class="text-center" role="banner">
  <h1>{{#if user.name}}{{user.name}}'s {{/if}}Saved Locations</h1>
  <a href="/profile">Back to Profile</a>
  <hr />
</header>

<section class="col-sm-8 col-sm-offset-2" role="region">
  <div>
    <ul>
      {{#each user.favourites}}
        <li class="truncate large-text">
          <a class="button btn btn-primary width-100" href="locations/{{this._id}}">{{this.data.name}} - {{this.data.extNumber}}</a>
        </li>
      {{/each}}
    </ul>
  </div>
</section>
